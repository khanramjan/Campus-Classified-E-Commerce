# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
CLIENT_URL="https://justcom.vercel.app"

# Database - Your MongoDB Atlas Connection (NEVER COMMIT ACTUAL CREDENTIALS)
MONGODB_URI="mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/DATABASE_NAME?retryWrites=true&w=majority"

# Authentication - Replace with strong secret keys
SECRET_KEY_ACCESS_TOKEN="your-strong-access-token-secret-key-here"
SECRET_KEY_REFRESH_TOKEN="your-strong-refresh-token-secret-key-here"

# Email Service - Get from Resend.com
RESEND_API="your-resend-api-key"

# Cloudinary Configuration - Get from Cloudinary dashboard
CLODINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLODINARY_API_KEY="your-cloudinary-api-key"
CLODINARY_API_SECRET_KEY="your-cloudinary-api-secret"

# Payment Gateway - Get from Stripe dashboard
STRIPE_SECRET_KEY="your-stripe-secret-key"